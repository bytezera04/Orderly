
@using Microsoft.AspNetCore.Components

@page "/privacy"

<PageTitle>Privacy - Orderly</PageTitle>

<div class="pt-20 min-h-screen bg-lightbg dark:bg-darkbg text-lightfg dark:text-darkfg">
    <div class="max-w-4xl mx-auto px-4 py-24 space-y-8">
        <h1 class="text-4xl font-bold text-center text-primary dark:text-primary">Privacy Policy</h1>
        <p class="text-lg text-lightfg/90 dark:text-darkfg/90 text-center">
            This privacy policy explains how we handle your data on this portfolio web application.
        </p>

        <section class="space-y-4">
            <h2 class="text-2xl font-semibold text-lightfg dark:text-darkfg">Information We Collect</h2>
            <p class="text-lightfg/90 dark:text-darkfg/90">
                We do not collect any personal information information unless you explicitly provide it
            </p>
        </section>

        <section class="space-y-4">
            <h2 class="text-2xl font-semibold text-lightfg dark:text-darkfg">How We Use Your Information</h2>
            <p class="text-lightfg/90 dark:text-darkfg/90">
                We don't use any of your information outside of the purpose of showcasing this portfolio web app,
                no information is ever sold or shared.
            </p>
        </section>

        <section class="space-y-4">
            <h2 class="text-2xl font-semibold text-lightfg dark:text-darkfg">Cookies</h2>
            <p class="text-lightfg/90 dark:text-darkfg/90">
                This site may use cookies for essential functionality or analytics purposes, but no personal data is tied to these cookies.
            </p>
        </section>

        <section class="space-y-4">
            <h2 class="text-2xl font-semibold text-lightfg dark:text-darkfg">Third-Party Services</h2>
            <p class="text-lightfg/90 dark:text-darkfg/90">
                We may link to external services or repositories (e.g., GitHub), but we are not responsible for their privacy practices.
            </p>
        </section>

        <section class="space-y-4">
            <h2 class="text-2xl font-semibold text-lightfg dark:text-darkfg">Changes to This Policy</h2>
            <p class="text-lightfg/90 dark:text-darkfg/90">
                This privacy policy may be updated occasionally. Any changes will be reflected on this page.
            </p>
        </section>

        <section class="text-center pt-8">
            <p class="text-lightfg/80 dark:text-darkfg/80">
                &copy; @DateTime.Now.Year Orderly. All rights reserved.
            </p>
        </section>
    </div>
</div>
